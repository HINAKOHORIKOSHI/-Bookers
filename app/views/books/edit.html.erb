<h2>Editing Book</h2>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
        <ul>
            <%= @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <p>Title<p>
    <%= f.text_field :title %>

    <p>body</p>
    <%= f.text_area :body %>
    
    <p>
    <%= f.submit 'Update Book' %>
    </p>

<%= link_to 'show', book_path(@book) %>
<%= link_to 'back', books_path %>

<% end %>
